{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=:memory:",
    "SourceDatabase": "Data Source=:memory:"
  },
  "MonitoringGrid": {
    "Database": {
      "TimeoutSeconds": 30,
      "EnableRetryOnFailure": true,
      "MaxRetryCount": 3,
      "MaxRetryDelay": 30
    },
    "Monitoring": {
      "EnableEmail": false,
      "EnableSms": false,
      "MaxParallelExecutions": 5,
      "SmsGateway": "test-gateway"
    },
    "Security": {
      "Jwt": {
        "SecretKey": "MonitoringGrid-Test-Secret-Key-32-Characters-Long",
        "AccessTokenExpirationMinutes": 60,
        "RefreshTokenExpirationDays": 7
      },
      "Encryption": {
        "EncryptionKey": "TestEncryptionKey123456789012345678901234567890"
      }
    },
    "Email": {
      "SmtpServer": "test-smtp.example.com",
      "SmtpPort": 587,
      "EnableSsl": true,
      "Username": "test@example.com",
      "Password": "test-password"
    },
    "Worker": {
      "IndicatorMonitoring": {
        "MaxParallelIndicators": 3,
        "PollingIntervalSeconds": 30
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  }
}
