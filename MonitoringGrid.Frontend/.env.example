# MonitoringGrid Frontend Environment Variables
# Copy this file to .env.local and update the values as needed

# API Configuration
VITE_API_BASE_URL=https://localhost:7000
VITE_API_TIMEOUT=30000

# SignalR Configuration
VITE_SIGNALR_HUB_URL=https://localhost:7000/monitoring-hub

# Application Configuration
VITE_APP_NAME=MonitoringGrid
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# Feature Flags
VITE_ENABLE_ADVANCED_ANALYTICS=true
VITE_ENABLE_REAL_TIME_UPDATES=true
VITE_ENABLE_DATA_VISUALIZATION=true

# Development Configuration
VITE_DEV_TOOLS=true
VITE_DEBUG_MODE=false

# Security Configuration
VITE_ENABLE_HTTPS=true
VITE_SECURE_COOKIES=true
VITE_ENABLE_CSP=true
VITE_ENABLE_SECURITY_HEADERS=true
VITE_ENABLE_RATE_LIMITING=true
VITE_MAX_LOGIN_ATTEMPTS=5
VITE_RATE_LIMIT_WINDOW=60000
VITE_CSP_REPORT_URI=
VITE_HSTS_MAX_AGE=31536000

# Performance Configuration
VITE_ENABLE_SERVICE_WORKER=true
VITE_ENABLE_CACHING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_PERFORMANCE_BUDGET_FCP=1800
VITE_PERFORMANCE_BUDGET_LCP=2500
VITE_PERFORMANCE_BUDGET_FID=100
VITE_PERFORMANCE_BUDGET_CLS=0.1
VITE_PERFORMANCE_BUDGET_TTFB=600
VITE_ENABLE_BUNDLE_ANALYZER=false

# Monitoring Configuration
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_MONITORING_ENDPOINT=
VITE_MONITORING_API_KEY=
VITE_MONITORING_SAMPLE_RATE=0.1

# PWA Configuration
VITE_ENABLE_PWA=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_PUSH_NOTIFICATIONS=false

# External Services
VITE_SENTRY_DSN=
VITE_GOOGLE_ANALYTICS_ID=
VITE_HOTJAR_ID=

# Build Configuration
VITE_BUILD_ANALYZE=false
VITE_BUILD_SOURCEMAP=false
VITE_BUILD_MINIFY=true
