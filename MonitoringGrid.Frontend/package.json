{
  "name": "monitoring-grid-frontend",
  "version": "1.0.0",
  "description": "React frontend for Monitoring Grid system",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:check": "tsc && vite build",
    "clean": "rimraf dist",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:coverage:ui": "vitest --ui --coverage",
    "test:unit": "vitest run --reporter=verbose src/**/*.test.{ts,tsx}",
    "test:integration": "vitest run --reporter=verbose src/test/integration/**/*.test.{ts,tsx}",
    "test:components": "vitest run --reporter=verbose src/components/**/*.test.{ts,tsx}",
    "test:hooks": "vitest run --reporter=verbose src/hooks/**/*.test.{ts,tsx}",
    "test:services": "vitest run --reporter=verbose src/services/**/*.test.{ts,tsx}",
    "test:utils": "vitest run --reporter=verbose src/utils/**/*.test.{ts,tsx}",
    "test:pages": "vitest run --reporter=verbose src/pages/**/*.test.{ts,tsx}",
    "test:ci": "vitest run --coverage --reporter=verbose",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "analyze": "ANALYZE=true npm run build",
    "audit": "npm audit --audit-level moderate",
    "audit:fix": "npm audit fix",
    "deps:update": "npm update",
    "deps:check": "npm outdated",
    "deps:unused": "npx depcheck --ignores=\"@types/*,@typescript-eslint/*,eslint-*,prettier,vitest,@vitest/*,@testing-library/*,jsdom,rimraf\"",
    "cleanup": "node scripts/cleanup.js",
    "cleanup:obsolete": "node scripts/cleanup-obsolete.js",
    "quality": "node scripts/code-quality.js",
    "quality:full": "npm run cleanup && npm run quality",
    "optimize:full": "npm run cleanup:obsolete && npm run lint:fix && npm run format && npm run analyze",
    "perf:analyze": "npm run build && npx vite-bundle-analyzer dist",

    "build:analyze": "npm run build && npx vite-bundle-analyzer dist",
    "test:performance": "npm run test -- --testNamePattern=\"performance\"",
    "test:accessibility": "npm run test -- --testNamePattern=\"accessibility\"",
    "test:security": "npm run test -- --testNamePattern=\"security\""
  },
  "dependencies": {
    "@ant-design/icons": "^6.0.0",
    "@hookform/resolvers": "^3.3.2",
    "@microsoft/signalr": "^8.0.7",
    "@tanstack/react-query": "^5.8.4",
    "@types/react-window": "^1.8.8",
    "antd": "^5.26.1",
    "axios": "^1.6.2",
    "date-fns": "^2.30.0",
    "i18next": "^25.2.1",
    "i18next-browser-languagedetector": "^8.1.0",
    "i18next-http-backend": "^3.0.2",
    "immer": "^10.1.1",
    "lucide-react": "^0.514.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^6.0.0",
    "react-helmet-async": "^2.0.5",
    "react-hook-form": "^7.48.2",
    "react-hot-toast": "^2.4.1",
    "react-i18next": "^15.5.2",
    "react-router-dom": "^6.20.1",
    "react-window": "^1.8.11",
    "react-window-infinite-loader": "^1.0.10",
    "recharts": "^2.15.3",
    "tailwind-merge": "^3.3.1",
    "web-vitals": "^5.0.3",
    "yup": "^1.3.3",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.1.1",
    "@vitest/coverage-v8": "^3.2.2",
    "@vitest/ui": "^3.2.2",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.4.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "jsdom": "^22.1.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.2.2",
    "vite": "^5.4.19",
    "vite-bundle-analyzer": "^0.7.0",
    "vitest": "^3.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
